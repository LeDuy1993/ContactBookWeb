@{
    ViewData["Title"] = "Course-Class Page";
    Layout = "_LayoutContactBook";
    var courseAll = ViewBag.courseAll as List<GetCourseAll>;
    var gradeAll = ViewBag.gradeAll as List<GetGradeAll>;
}

<div class="main-container">
    <div class="pd-20 card-box" style="height:auto">
        <div class="tab row">
            <div class="col-lg-3 col-md-3 col-sm-3">
                <label>Select Course</label>
                <select class="custom-select2 form-control" name="state" style="width: 100%; height: 38px;" id="courseId"
                        href="javascript:;" onchange="courseGradeClass.showClass()">
                    @foreach (var cou in courseAll)
                    {
                        <option value="@cou.CourseId">@cou.CourseName</option>
                    }
                </select>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <label>Create Course</label>

            </div>
        </div>
    </div>
    <div class="pd-20  mt-15" style="height:auto">
        <div class="tab row">
            <div class="col-lg-4 col-md-4 col-sm-4 pd-10 card-box text-center">
                <div>
                    <label>
                        <b>Grade 10</b>
                    </label>
                    <a href="javascript:void(0);" onclick="courseGradeClass.createClass(1)" class="float-right text-success" style="font-size:25px">
                        <i class="icon-copy ion-android-add-circle"></i>
                    </a>
                </div>
                <ul class="nav flex-column vtabs nav-tabs customtab" style="border-right: none" id="grade10">
                </ul>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 pd-10 card-box text-center">
                <div>
                    <label>
                        <b>Grade 11</b>
                    </label>
                    <a href="javascript:void(0);" onclick="courseGradeClass.createClass(2)" class="float-right text-success" style="font-size:25px">
                        <i class="icon-copy ion-android-add-circle"></i>
                    </a>
                </div>
                <ul class="nav flex-column vtabs nav-tabs customtab" style="border-right: none" id="grade11">
                </ul>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 pd-10 card-box text-center">
                <div>
                    <label>
                        <b>Grade 12</b>
                    </label>
                    <a href="javascript:void(0);" onclick="courseGradeClass.createClass(3)" class="float-right text-success" style="font-size:25px">
                        <i class="icon-copy ion-android-add-circle"></i>
                    </a>
                </div>
                <ul class="nav flex-column vtabs nav-tabs customtab" style="border-right: none" id="grade12">
                </ul>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/courseGradeClass.js" asp-append-version="true"></script>

}
