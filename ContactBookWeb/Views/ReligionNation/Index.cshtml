@model List<NationView>
@{
    ViewData["Title"] = "Religion-Nation Page";
    Layout = "_Layout Table";
}
<div class="main-container">
    <div class="card-box mb-30">
        <div class="pd-20">
            <h4 class="text-blue h4">Nation Table </h4>
        </div>
        <hr />
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">Id</th>
                    <th>Nation Name</th>
                    <th>Students</th>
                    <th class="datatable-nosort">Action</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var nation in Model)
                {
                    <tr>
                        <td class="table-plus">@nation.NationId</td>
                        <td>@nation.NationName</td>
                        <td>@nation.Students</td>
                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a>
                                    <a class="dropdown-item" href="#"><i class="dw dw-edit2"></i> Edit</a>
                                    <a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-box mb-30">
        <div class="pd-20">
            <h4 class="text-blue h4">Religion Table </h4>
        </div>
        <hr />
        <table class="table stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">Id</th>
                    <th>Religion Name</th>
                    <th class="datatable-nosort">Action</th>
                </tr>
            </thead>
            <tbody id="religion">
            </tbody>
        </table>
    </div>



</div>

@section Scripts{
    <script src="~/js/RelegionNation.js" asp-append-version="true"></script>

}